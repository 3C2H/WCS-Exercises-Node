extends index.pug

block deleteUser
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 User delete

        //-register form
        form(method='POST' action='/user?_method=DELETE')
          div.form-group
            label(for='userId') userId:
            input#userId.form-control(type='text',
            placeholder='first and last' userId='userId')
          button.btn.btn-primary(type='submit') delete